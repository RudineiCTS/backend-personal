generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudentGym {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String @unique
  phone    String @unique
  dateOfBirth DateTime
  gender  String
  goalToAchieve String
  observation String?
  studentGymActive Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workout {
  id          Int      @id @default(autoincrement())
  nameWorkout String
  description String?
  dayOfWeek   Int
  idStudentGym Int
  studentGym StudentGym @relation(fields:[idStudentGym], references:[id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Exercise {
  id          Int      @id @default(autoincrement())
  nameExercise String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tags        String[]
}

model ExerciseToWorkout{
  id          Int      @id @default(autoincrement())
  idExercise  Int
  idWorkout   Int
  sets        Int?
  repetitions Int?
  weight      Float?
  restTime    Int?
  exercise    Exercise @relation(fields:[idExercise], references:[id])
  workout     Workout @relation(fields:[idWorkout], references:[id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}